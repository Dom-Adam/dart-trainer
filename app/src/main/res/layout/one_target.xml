<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/one_target_secondary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_text_size"
            app:layout_constraintBottom_toBottomOf="@id/one_target_main_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/one_target_main_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Target" />

        <TextView
            android:id="@+id/one_target_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/score_text_size"
            app:layout_constraintEnd_toEndOf="@+id/one_target_secondary_label"
            app:layout_constraintStart_toStartOf="@id/one_target_secondary_label"
            app:layout_constraintTop_toBottomOf="@id/one_target_secondary_label"
            tools:text="20" />

        <TextView
            android:id="@+id/one_target_main_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_text_size"
            app:layout_constraintBottom_toTopOf="@+id/one_target_main"
            app:layout_constraintEnd_toEndOf="@+id/one_target_main"
            app:layout_constraintStart_toStartOf="@+id/one_target_main"
            tools:text="Current Score" />

        <TextView
            android:id="@+id/one_target_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/target_textSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="50" />

        <TextView
            android:textSize="@dimen/label_text_size"
            android:id="@+id/one_target_tertiary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/one_target_main"
            app:layout_constraintEnd_toStartOf="@+id/one_target_main_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="@dimen/score_text_size"
            tools:text="20"
            android:id="@+id/one_target_tertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/one_target_tertiary_label"
            app:layout_constraintStart_toStartOf="@+id/one_target_tertiary_label"
            app:layout_constraintTop_toBottomOf="@+id/one_target_tertiary_label" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>